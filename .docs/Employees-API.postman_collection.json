{
    "info": {
        "name": "API de Funcionários",
        "description": "Coleção de endpoints para a API de Gerenciamento de Funcionários",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{jwt_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost/api",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Autenticação",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('jwt_token', response.data.access_token);",
                                    "    pm.collectionVariables.set('jwt_token', response.data.access_token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"usuario@example.com\",\n    \"password\": \"secret\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Informações do Usuário",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/me",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "me"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Renovar Token",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('jwt_token', response.data.access_token);",
                                    "    pm.collectionVariables.set('jwt_token', response.data.access_token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/refresh",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "refresh"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/logout",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "logout"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Funcionários",
            "item": [
                {
                    "name": "Listar Funcionários",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/employees",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "employees"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Criar Funcionário",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"João Silva\",\n    \"email\": \"joao@example.com\",\n    \"cpf\": \"12345678901\",\n    \"city\": \"São Paulo\",\n    \"state\": \"SP\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/employees",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "employees"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Visualizar Funcionário",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/employees/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "employees",
                                "1"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Atualizar Funcionário (PUT)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"João Silva Santos\",\n    \"email\": \"joao.santos@example.com\",\n    \"cpf\": \"12345678901\",\n    \"city\": \"São Paulo\",\n    \"state\": \"SP\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/employees/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "employees",
                                "1"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Atualizar Funcionário (PATCH)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"João Silva Santos\",\n    \"email\": \"joao.santos@example.com\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/employees/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "employees",
                                "1"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Excluir Funcionário",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/employees/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "employees",
                                "1"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Importar Funcionários (CSV)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": "",
                                    "description": "Arquivo CSV com dados dos funcionários"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/employees/import",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "employees",
                                "import"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ]
}